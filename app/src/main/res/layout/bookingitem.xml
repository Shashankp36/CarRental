<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="10dp"
    app:cardCornerRadius="8dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/bookingIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking ID"
            android:textSize="16sp"

            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/carDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Details:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/clientNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Client Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pickTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup Details:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dropTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drop Details:"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/clientContactTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location:"
            android:textSize="16sp" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Appointment"

            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
